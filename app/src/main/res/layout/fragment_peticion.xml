<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.peticionFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tituloPeticion"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:textSize="25sp"
        android:paddingTop="5dp"/>


    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/txtPaciente"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:drawableLeft="@drawable/ic_user"
            android:hint="@string/nombrePaciente"
            android:inputType="text"

            app:met_baseColor="@color/textColor"
            app:met_primaryColor="@color/textColor"
            app:met_textColorHint="@color/textColor" />


        <Button
            android:id="@+id/btnBuscar"
            android:background="#431F63"
            android:text="Buscar"
            android:textSize="15sp"
            android:layout_margin="5dp"
            android:textColor="@android:color/white"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <TextView
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:text="Nombre del solicitante"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/txtNombreRealizador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:hint="Nombre completo"
        android:inputType="text"

        app:met_baseColor="@color/textColor"
        app:met_primaryColor="@color/textColor"
        app:met_textColorHint="@color/textColor" />


    <TextView
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:text="Descripción"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/txtDescripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:hint="Descripción"
        android:inputType="text"
        app:met_baseColor="@color/textColor"
        app:met_primaryColor="@color/textColor"
        app:met_textColorHint="@color/textColor" />


    <TextView
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:text="Estado"/>


    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/txtEstado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:hint="Estado"
        android:inputType="text"
        app:met_baseColor="@color/textColor"
        app:met_primaryColor="@color/textColor"
        app:met_textColorHint="@color/textColor" />


    <Button
        android:id="@+id/btnSolicitar"
        style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:background="#431F63"
        android:text="Aceptar"
        android:textColor="@android:color/white"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btnLimpiar"
        style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:background="#431F63"
        android:text="Limpiar"
        android:visibility="gone"
        android:textColor="@android:color/white"
        android:textSize="15sp" />


</LinearLayout>